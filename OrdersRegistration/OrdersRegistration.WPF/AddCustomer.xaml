<Window x:Class="OrdersRegistration.WPF.AddCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrdersRegistration.WPF"
        mc:Ignorable="d"
        Title="Dodaj zleceniodawcę" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF414197" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="btnAddCustomer" Content="Dodaj zleceniodawcę" HorizontalAlignment="Right" Margin="0,0,10,23" VerticalAlignment="Bottom" Width="123" Click="btnAddCustomer_Click" Height="36"/>
        <TextBox x:Name="tBAddCustomer" HorizontalAlignment="Left" Height="23" Margin="32,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220"/>
        <Label x:Name="label" Content="Podaj nazwę zleceniodawcy&#xD;&#xA;" HorizontalAlignment="Left" Margin="32,63,0,0" VerticalAlignment="Top" Width="220" Height="27" Foreground="White"/>

    </Grid>
</Window>
