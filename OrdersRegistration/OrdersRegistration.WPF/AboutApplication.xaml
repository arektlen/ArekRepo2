        <Label x:Name="labelAppName" Content="Aplikacja: ORDERS REGISTRATION" HorizontalAlignment="Left" Margin="35,40,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label x:Name="labelAuthPhoneNumber" Content="tel.: 502 345 699" HorizontalAlignment="Left" Margin="35,191,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label x:Name="labelAuthMail" Content="arkadiusz.bejger@gmail.com" HorizontalAlignment="Left" Margin="35,160,0,0" VerticalAlignment="Top" Foreground="White"/>

    </Grid>
</Window>
