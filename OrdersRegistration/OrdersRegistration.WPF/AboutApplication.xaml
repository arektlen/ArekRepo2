        </Grid.Background>
        <Button x:Name="buttonOkAboutApplication" Content="Ok" HorizontalAlignment="Left" Margin="195,210,0,0" VerticalAlignment="Top" Width="75" Height="35" Click="buttonOkAboutApplication_Click"/>
